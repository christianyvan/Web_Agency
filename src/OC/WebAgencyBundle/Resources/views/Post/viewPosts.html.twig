{% extends '::base.html.twig' %}
 {% block body %}
     <div class="container">
         <h1>VIEW POSTS</h1>
         <table class="table table-striped table-hover">
             <thead>
             <tr>
                 <th>ID</th>
                 <th>Title</th>
                 <th>Name</th>
                 <th>Content</th>
                 <th>Email</th>
                 <th>Image</th>
                 <th>Category</th>
             </tr>
             </thead>
             <tbody>
                 {% for post in posts %}
                 <tr>
                     <td>{{ post.id }}</td>
                     <td>{{ post.title }}</td>
                     <td>{{ post.name }}</td>
                     <td>{{ post.content }}</td>
                     <td>{{ post.email }}</td>
                     <td>{{ post.image }}</td>
                     <td>{{ post.category }}</td>
                     <td>
                         <a href="" class="btn btn-primary">View</a>
                         <a href="" class="btn btn-success">Edit</a>
                         <a href="" class="btn btn-danger">Delete</a>
                     </td>
                 </tr>
                  {% endfor %}
             </tbody>
         </table>
     </div>




 {% endblock %}